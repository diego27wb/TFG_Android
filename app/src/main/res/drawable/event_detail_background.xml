<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@android:color/white" />

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFD699"
                android:centerColor="#FFEBB3"
                android:endColor="#A7EAE4"
                android:angle="45"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#FFA07A"
                android:centerColor="#B2DFDB"
                android:endColor="#FFCCBC"
                android:angle="90"/>
        </shape>
    </item>

    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <gradient
                    android:startColor="#B2EBF2"
                    android:centerColor="#FFD699"
                    android:endColor="#FFB74D"
                    android:angle="45"/>
            </shape>
        </rotate>
    </item>
</layer-list>
