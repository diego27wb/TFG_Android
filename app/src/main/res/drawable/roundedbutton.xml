<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="5dp" android:top="5dp">
                <shape>
                    <corners android:bottomRightRadius="145dp"
                        android:bottomLeftRadius="145dp"
                        android:topRightRadius="145dp"
                        android:topLeftRadius="8dp" />
                    <solid android:color="@color/black" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="@color/colorAccent" android:startColor="#86C289" />
                    <stroke android:width="1dp" android:color="#BABABA" />
                    <corners android:bottomRightRadius="150dp"
                        android:bottomLeftRadius="150dp"
                        android:topRightRadius="150dp"
                        android:topLeftRadius="8dp" />
                    <padding android:bottom="10dp" android:left="10dp"
                        android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>