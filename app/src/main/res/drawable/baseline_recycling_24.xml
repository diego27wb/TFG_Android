<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo blanco -->
    <item android:drawable="@android:color/white" />

    <!-- Formas geomÃ©tricas -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#B5EAD7"
                android:centerColor="#C4E9C1"
                android:endColor="#E6F1C5"
                android:angle="45"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#A8E6CF"
                android:centerColor="#C0ECD9"
                android:endColor="#D2E1F2"
                android:angle="90"/>
        </shape>
    </item>

    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <gradient
                    android:startColor="#A8E6CF"
                    android:centerColor="#C0ECD9"
                    android:endColor="#E6F1C5"
                    android:angle="45"/>
            </shape>
        </rotate>
    </item>
</layer-list>
