<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@android:color/white" />


    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#B2EBF2"
            android:centerColor="#C8E6C9"
            android:endColor="#FFCCBC"
            android:angle="45"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#81C784"
            android:centerColor="#A5D6A7"
            android:endColor="#FFAB91"
            android:angle="90"/>
        </shape>
    </item>

    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <gradient
                    android:startColor="#81C784"
                android:centerColor="#AED581"
                android:endColor="#FFD54F"
                android:angle="45"/>
            </shape>
        </rotate>
    </item>
</layer-list>
