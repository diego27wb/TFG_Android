<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@android:color/white" />

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#B0E57C"
                android:centerColor="#D1E3A9"
                android:endColor="#E8C9F0"
                android:angle="45"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#BFEF9A"
                android:centerColor="#6BA46E"
                android:endColor="#8EE88E"
                android:angle="90"/>
        </shape>
    </item>

    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <gradient
                    android:startColor="#BFEF9A"
                    android:centerColor="#6BA46E"
                    android:endColor="#8EE88E"
                    android:angle="45"/>
            </shape>
        </rotate>
    </item>
</layer-list>
