<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@android:color/white" />

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#A8E6CF"
                android:centerColor="#Dcedc1"
                android:endColor="#E4D3F2"
            android:angle="45"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#DAC1E8"
                android:centerColor="#C5E4C9"
                android:endColor="#D2E1F2"
                android:angle="90"/>
        </shape>
    </item>

    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <gradient
                    android:startColor="#DAC1E8"
                    android:centerColor="#C9E4C5"
                    android:endColor="#FFDAC1"
                    android:angle="45"/>
            </shape>
        </rotate>
    </item>
</layer-list>
